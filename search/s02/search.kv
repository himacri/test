#:kivy 2.0.0
<Test>:
    canvas:
        Color:
            rgba: 0.3, 0.3, 0.5, 1
        Rectangle:
            size: self.size
            pos: self.pos
    rv: rv
    Button:
        text: "SEARCH"
        font_size: 50
        background_normal: ''
        color: 1, 1 ,1 ,1
        pos: 500,root.top-200
        size: 300,100
        background_color: 0.5, 0.5, 0.75, 1
        on_press: root.click()

    TextInput:
        id: keyWD
        text: ''
        pos: 100,root.top-200
        size: 300,100

    Label:
        id: result
        text: '------------------------------------------------------------------------------------------------------------------------------------------------------------------'
        color: 1, 1, 1
        font_size:40
        pos: root.right*0.5 ,root.top-280
        #size: 300,50

    BoxLayout:
        id: box01
        canvas:
            Color:
                rgb: 1,1,0
        size: 500,500
        pos: 20,20
        AsyncImage: #AsyncImage
            id: image01
            allow_stretch: True
            #nocache: True
            source: "./01.jpg"
            #background_normal: root.img_src

    RecycleView:
        size: root.right-40,root.top-840
        pos: 20,520
        #size: root.right-40,root.top-440
        #pos: 20,20
        id: rv
        scroll_type: ['bars', 'content']
        scroll_wheel_distance: sp(70) #スクロール速度
        bar_width: sp(20)
        viewclass: 'VariousButtons'
        RecycleBoxLayout:
            default_size: None, sp(20)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
            spacing: dp(8)

#スクロール内ボタン設定
<VariousButtons>:
    canvas:
        Color:
            rgba: 0.5, 0.5, 0.75, 1
        Rectangle:
            size: self.size
            pos: self.pos
    no: ''
    name: ''
    url: ''
    value: ''
    condi: ''
    photo: ''

    Button:
        text: root.no
        background_normal: ''
        background_color: 0,0,0,1
        color: 1, 1 ,1 ,1
        on_press:
            root.on_select_button(self)
    Label:
        text: root.value
        background_normal: ''
        color: 1, 1 ,1 ,1
        #on_press: root.on_select_button(self)
    Label:
        text: root.condi
        background_normal: ''
        color: 1, 1 ,1 ,1
        #on_press: root.on_select_button(self)

    Label:
        id: label01
        text: root.name
        background_normal: ''
        color: 1, 1 ,1 ,1
        #on_press: root.on_select_button(self)
    Label:
        text: root.url
        background_normal: ''
        color: 1, 1 ,1 ,1
        #on_press: root.on_select_button(self)